<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="10dp">

    <TextView
        android:id="@+id/levelSettingsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Level Settings" />

    <ScrollView
        android:id="@+id/levelSettingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/levelSettingsHeading"
        app:layout_constraintBottom_toTopOf="@+id/levelSettingsButtons" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="ID:" />
                <TextView
                    android:id="@+id/displayLevelId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="432"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_400" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Type:"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">


                    <Spinner
                        android:id="@+id/typeSpinner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:text="Campaign Code:"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/displayCampaignCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:text="A2"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_400" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="Objective:"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/objectiveSpinner"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="20dp" />


                </LinearLayout>



            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Name:" />
                <EditText
                    android:id="@+id/editLevelName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="level name"
                    android:textColor="@color/gray_400" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Order:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <EditText
                        android:id="@+id/editLevelOrder"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:text="order"
                        android:textColor="@color/gray_400" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="Difficulty" />

                    <EditText
                        android:id="@+id/editDifficultyWeight"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:inputType="numberDecimal"
                        android:text="1.0"
                        android:textColor="@color/gray_400" />

                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Map ID:" />

                <Spinner
                    android:id="@+id/mapSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                   android:background="@color/black" />

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Server:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/hostNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:text="[server]" />

                    <Button
                        android:id="@+id/btnUploadLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        style="@style/DefaultButton"
                        android:text="Upload to Server" />

                </LinearLayout>

            </TableRow>
        </TableLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/levelSettingsButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom|right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/saveCreateLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/DefaultButton"
            android:text="Save" />
        <Button
            android:id="@+id/closeCencelCreateLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/DefaultButton"
            android:text="Close" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/networkProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>