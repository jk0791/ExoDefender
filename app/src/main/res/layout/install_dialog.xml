<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#696969"
    android:clickable="true"
    android:visibility="visible">

    <LinearLayout

        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_border"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/installMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry. This version of Lunar Lander POV is no longer supported. Newer versions have important bug fixes and new functionality.\n\nPlease update to the latest version."
            android:textColor="#80D232"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/installAppUrlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:paddingTop="10dp"
            android:text="http://play.google.com"
            android:textColor="#80D232"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google_play_button"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:foreground="@drawable/google_play_icon"
                android:paddingTop="10dp" />

            <Button
                android:id="@+id/installMessageOkButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="40dp"
                android:padding="0dp"
                android:paddingTop="10dp"
                android:text="Close"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>