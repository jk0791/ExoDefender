<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="500dp">

        <TextView
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We've given you a temporary callsign which you can change now or later"
            android:textSize="35dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtCurrentCallsign"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/border_full"
                android:text="patay84"
                android:textSize="35dp" />
            <Button
                android:id="@+id/btnChangeCallsign"
                style="@style/DefaultButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="30dp"
                android:text="Change" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        style="@style/DefaultButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:text="First Op &gt;"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>