<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/screenLabel"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/imageTilt"
        app:layout_constraintTop_toTopOf="@+id/imageTilt">

        <ImageView
            android:id="@+id/screenLabelPrevButton"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tut_prev_button_off"/>

        <TextView
            android:id="@+id/screenLabelText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#c7c966"
            android:shadowColor="#FF000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:textAlignment="center"
            android:text="This is the label text"/>

        <ImageView
            android:id="@+id/screenLabelNextButton"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tut_next_button_off"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageTilt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintVertical_bias="0.2"
        android:src="@drawable/tut_tilt_roll_00"/>

    <ImageView
        android:id="@+id/imageSlide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHorizontal_bias="0.05"
        android:src="@drawable/tut_slide_00"/>

    <ImageView
        android:id="@+id/imageFire"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHorizontal_bias="0.9"
        android:src="@drawable/tut_fire_00"/>

    <ImageView
        android:id="@+id/imageThrottle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.15"
        android:src="@drawable/tut_throttle_00"/>

</androidx.constraintlayout.widget.ConstraintLayout>

