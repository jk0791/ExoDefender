<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/agencyr"
    android:textColor="#5ADC00"
    android:clickable="true" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BB000000"
                    android:orientation="vertical"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.4" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:padding="20dp"
                            android:textAlignment="center"
                            style="@style/DefaultText"
                            android:background="@drawable/border_lower"
                            android:text = "Game Paused" />


                        <Button
                            android:id="@+id/btnResume"
                            style="@style/DefaultBorderlessButton"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:padding="15dp"
                            android:text="Resume" />
                        <Button
                            android:id="@+id/btnPrev"
                            style="@style/DefaultBorderlessButton"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:padding="15dp"
                            android:text="Restart Level" />
                        <Button
                            android:id="@+id/btnExitSummary"
                            style="@style/DefaultBorderlessButton"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textSize="30dp"
                            android:padding="15dp"
                            android:text="Exit Level" />

                </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>