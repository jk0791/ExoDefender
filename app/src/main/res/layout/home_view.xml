<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="500dp"
        app:layout_constraintHeight_max="500dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:textAlignment="center"
            style="@style/DefaultText"
            android:background="@drawable/border_lower"
            android:text = "HOME" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/btnBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    style="@style/DefaultBorderlessButton"
                    android:text = "Background" />

                <Button
                    android:id="@+id/btnMilkRuns"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    style="@style/DefaultBorderlessButton"
                    android:text = "Low-Risk Ops" />



            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/btnTraining"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    style="@style/DefaultBorderlessButton"
                    android:text = "Training" />

                <Button
                    android:id="@+id/btnMissions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    style="@style/DefaultBorderlessButton"
                    android:text = "Missions" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/btnCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    style="@style/DefaultBorderlessButton"
                    android:enabled="false"
                    android:text = "Community" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/btnReplays"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    style="@style/DefaultBorderlessButton"
                    android:text = "Replays" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </TableRow>

        </TableLayout>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>