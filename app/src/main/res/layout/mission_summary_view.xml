<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/missionSummaryRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/agencyr">

    <!-- Dimmed background -->
    <View android:id="@+id/dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <!-- Center card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/score_card_border"
        android:padding="5dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btnExitSummary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:background="#00000000"
            android:src="@drawable/close_button" />

        <TextView
            android:id="@+id/txtMissionTitle"
            style="@style/DefaultText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A3-5: Phantasm"
            android:textAlignment="center"
            android:textSize="26sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Big heading (Mission Failed / Mission Completed / New PB etc.) -->
        <TextView
            android:id="@+id/txtHeading"
            style="@style/DefaultText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mission Completed!"
            android:textAlignment="center"
            android:textSize="42sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/txtMissionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Optional subheading (Ship destroyed / All friendlies lost) -->
        <TextView
            android:id="@+id/txtFailureReason"
            style="@style/DefaultText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textColor="@android:color/white"
            android:text="Ship destroyed"
            app:layout_constraintTop_toBottomOf="@id/txtHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txtHeading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- LEFT ACTIONS BLOCK RIGHT-->
            <LinearLayout
                android:id="@+id/actionsBlockL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnTryAgain"
                    style="@style/DefaultButton"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Try again" />

            </LinearLayout>


            <!-- LEFT STATS BLOCK (Score, Difficulty, Friendlies, etc.) -->
            <ScrollView
                android:id="@+id/scrollRegion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fillViewport="true" >


                    <LinearLayout
                        android:id="@+id/statsBlock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <!-- Score row -->
                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowDifficulty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowFriendlies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowEnemiesDestroyed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowIntegrity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowAccuracy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/linkMore"
                            style="@style/DefaultText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="More..."
                            android:textSize="20sp"
                            android:textColor="#5ADC00" />

                        <!-- Personal best comparison block -->

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowPbValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.jimjo.exodefender.LabelValueRow
                            android:id="@+id/rowPbDelta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

            </ScrollView>

            <!-- RIGHT ACTIONS BLOCK RIGHT-->
            <LinearLayout
                android:id="@+id/actionsBlockR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal">


                <LinearLayout
                    android:id="@+id/btnWatchReplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingHorizontal="5dp"
                        android:src="@drawable/ic_replay"
                        app:tint="#5ADC00" />

                    <TextView
                        style="@style/DefaultText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Watch Replay"
                        android:textSize="14sp" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/btnViewRankings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingHorizontal="5dp"
                        android:src="@drawable/ic_trophy"
                        app:tint="#5ADC00" />

                    <TextView
                        style="@style/DefaultText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="View Player Rankings"
                        android:textSize="14sp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnNextMission"
                    style="@style/DefaultButton"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Next Mission >"
                    android:visibility="visible" />

                <!-- Pre-mission "Start" button (only in VIEW_BEST_RUN state) -->
                <Button
                    android:id="@+id/btnStart"
                    style="@style/DefaultButton"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:textSize="30dp"
                    android:text="Start"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Score breakdown overlay (starts hidden) -->
    <com.jimjo.exodefender.ScoreBreakdownPopupView
        android:id="@+id/scoreBreakdownPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- network progress -->
    <FrameLayout
        android:id="@+id/levelRankingNetworkProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#00000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />

    </FrameLayout>

    <com.jimjo.exodefender.PlayerRankingsView
        android:id="@+id/playerRankingsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
