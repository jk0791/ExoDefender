<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/home_button_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="900dp"
        app:layout_constraintHeight_max="500dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/prevCampaign"
                    android:padding="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:src="@drawable/prev_campaign_button" />

                <TextView
                    android:id="@+id/levelsHeadingLabel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/DefaultText"
                    android:text = "Missions: A2" />

                <ImageView
                    android:id="@+id/nextCampaign"
                    android:padding="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/next_campaign_button" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/btnLastFlight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/replay_icon" />
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lvlIdx0"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "11" />
            <TextView
                android:id="@+id/lvlName0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Borderlands" />
            <TextView
                android:id="@+id/lvlIdx5"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "16" />
            <TextView
                android:id="@+id/lvlName5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Fool's Gold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lvlIdx1"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "12" />
            <TextView
                android:id="@+id/lvlName1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Into the Breach" />
            <TextView
                android:id="@+id/lvlIdx6"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "17" />
            <TextView
                android:id="@+id/lvlName6"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Phantasm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lvlIdx2"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "13" />
            <TextView
                android:id="@+id/lvlName2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Siljan Valley" />
            <TextView
                android:id="@+id/lvlIdx7"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "18" />
            <TextView
                android:id="@+id/lvlName7"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Light the Fire" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lvlIdx3"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "14" />
            <TextView
                android:id="@+id/lvlName3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "The Ridge" />
            <TextView
                android:id="@+id/lvlIdx8"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:textColor="@color/gray_600"
                android:text = "19" />
            <TextView
                android:id="@+id/lvlName8"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:textColor="@color/gray_600"
                android:text = "Matchpoint" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lvlIdx4"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "15" />
            <TextView
                android:id="@+id/lvlName4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:text = "Centauris Rising" />
            <TextView
                android:id="@+id/lvlIdx9"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:textColor="@color/gray_600"
                android:text = "20" />
            <TextView
                android:id="@+id/lvlName9"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="45dp"
                style="@style/DefaultText"
                android:textColor="@color/gray_600"
                android:text = "The End Game" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
